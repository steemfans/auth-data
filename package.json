{
  "name": "@steemfans/auth-data",
  "version": "1.0.0",
  "description": "To sign and auth data without a json-rpc way.",
  "main": "dist/cmjs/index.js",
  "module": "dist/es6/index.js",
  "scripts": {
    "build:cmjs": "tsc -P tsconfig.json",
    "build:es6": "tsc -P tsconfig.json --module ES6 --outDir dist/es6",
    "build:web": "browserify dist/cmjs/index.js --standalone myLib -o dist/web/bundle.js",
    "build": "npm run build:cmjs; npm run build:es6; npm run build:web",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steemfans/data-sign-auth.git"
  },
  "keywords": [
    "steem",
    "sign",
    "auth"
  ],
