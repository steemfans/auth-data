{
  "name": "@steemfans/auth-data",
  "version": "1.0.0",
  "description": "To sign and auth data without a json-rpc way.",
  "main": "dist/cmjs/index.js",
  "module": "dist/es6/index.js",
  "scripts": {
    "build:cmjs": "tsc -P tsconfig.json",
    "build:es6": "tsc -P tsconfig.json --module ES6 --outDir dist/es6",
    "build:web": "browserify dist/cmjs/index.js --standalone steemAuthData -o dist/web/bundle.js",
    "build": "yarn run clean; yarn run build:cmjs; yarn run build:es6; yarn run build:web",
    "clean": "rm -rf dist/*",
    "lint": "tslint -p tsconfig.json -c tslint.json -t stylish --fix",
    "test": "mocha --require ts-node/register test/*.ts --grep '$(grep)'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steemfans/data-sign-auth.git"
  },
  "keywords": [
    "steem",
    "sign",
    "auth"
  ],
  "author": "ETY001",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steemfans/auth-data/issues"
  },
  "homepage": "https://github.com/steemfans/auth-data#readme",
  "devDependencies": {
    "@steemit/steem-js": "^0.7.11",
    "@types/browserify": "^12.0.36",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.2",
    "browserify": "^16.5.2",
    "crypto": "^1.0.1",
    "mocha": "^8.1.3",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
